[build]
target = "i686-pc-windows-msvc"

[target.i686-pc-windows-msvc]
rustflags = [
  "-C",
  "target-feature=+crt-static",
]

[target.x86_64-pc-windows-msvc]
rustflags = [
  "-C",
  "target-feature=+crt-static",
]

[alias]
b = "build --target i686-pc-windows-msvc"
b64 = "build --target x86_64-pc-windows-msvc"
